{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["src", "test"],
    "paths": {
      "@/*": ["./lib/*"],
      "@/tests/*": ["./test/*"]
    }
  }
}
